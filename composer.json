{
  "name": "mrmadclown/poller",
  "description": "",
  "type": "library",
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "~9.0"
  },
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "MrMadClown\\Poller\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MrMadClown\\Poller\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "tests": [
      "phpunit --configuration phpunit.xml"
    ],
    "local-tests": [
      "docker-compose up -d ",
      "docker-compose exec -T app vendor/bin/phpunit --configuration phpunit.xml --debug --verbose",
      "docker-compose down"
    ]
  }
}
